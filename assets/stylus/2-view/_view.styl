.vueApp
	position: relative
	margin: 0 auto
	clear: both
	&__left
		float: left
		width: 49.5vw
		height: 85vh
		overflow: auto
		padding: 10px 27px
		box-sizing: border-box
		box-shadow: 0px 5px 27.2px 4.8px rgba(70, 72, 74, 0.12)
		&::-webkit-scrollbar
			width: 8px
		&::-webkit-scrollbar-track
			-webkit-box-shadow: inset 0 0 6px white
		&::-webkit-scrollbar-thumb
			background-color: #e4e6e8
			border-radius: 13px
	&__right
		float: right
		width: 49.1vw
		height: 85vh
		overflow: auto
		padding: 10px 27px
		box-sizing: border-box
		&::-webkit-scrollbar
			width: 8px
		&::-webkit-scrollbar-track
			-webkit-box-shadow: inset 0 0 6px white
		&::-webkit-scrollbar-thumb
			background-color: #e4e6e8
			border-radius: 13px

.modalWindow
	&__layout
		width: 100%
		height: 100%
		position: fixed
		top: 0
		z-index: 90
		background: #000
		opacity: .75
		overflow: hidden
	&__block
		display: block
		position: absolute
		left: calc(50vw - 25vw)
		top: 75px
		height: 60vh
		width: 50vw
		background: #ecf0f1
		z-index: 100
		padding: 17px 20px
		box-sizing: border-box
		border-radius: 7px
		overflow: auto
		&::-webkit-scrollbar
			width: 8px
		&::-webkit-scrollbar-track
			-webkit-box-shadow: inset 0 0 6px white
			border-radius: 7px
		&::-webkit-scrollbar-thumb
			background-color: #e4e6e8
			border-radius: 13px
	&__title
		display: inline-block
		width: 95%
		color: #636363
		font-weight: 300
	&__close
		position: inherit
		top: 0
		right: 20px
		display: inline-block
		font-size: 2.5em
		color: #636363
		cursor: pointer
	&__list
		& > li
			margin: 5px 0
			font-weight: 300
		&_item
			font-weight: 400