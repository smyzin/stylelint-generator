.options
	display: block
	position: relative
	max-width: auto
	min-width: 435px
	margin: 0 auto
	&__title
		color: #636363

.option
	display: block
	position: relative
	&__title
		color: #636363
		font-weight: 300
	&__text
		color: #6f6f6f
		margin: 25px 0
		font-weight: 300
		&_rule
			margin: 0 5px
			font-weight: 400
			font-size: 1.1em
			vertical-align: baseline
			color: #f9a11b
			letter-spacing: 1px
			text-decoration: underline
	&__btn
		position: inherit !important
		border-radius: 5px
		margin: 20px auto !important
		&:focus
			color: #28b78d
	&__number
		font-size: 1.2em
		text-align: center
		font-weight: 300
		& > b
			color: #808080
			font-weight: 400
	&__success
		position: relative
		background: #242424
		width: 90px
		padding: 10px 13px
		border-radius: 7px
		&_arrow
			position: absolute
			left: -10px
			top: calc(32px-10px)
			border-top: 10px solid transparent
			border-bottom: 10px solid transparent
			border-right: 10px solid #242424
		& > span
			color: white
	&__transition
		width: 200px
		display: inline-block
		margin: 0 0 0 20px

.choose
	position: relative
	display: block
	text-align: center
	&__block
		display: inline-block
		position: inherit
		max-height: 220px
		vertical-align: middle
		z-index: 10
		background: #ecf0f1
		width: auto
		padding: 13px 15px
		margin: 7px 10px
		border: 1px solid #ccc
		border-radius: 7px
		cursor: pointer
		overflow: hidden
	&__title
		position: inherit
		z-index: 9
		color: #333
	&__code
		position: inherit
		z-index: 8
		margin: 0
		width: 210px
		padding: 10px 7px
		text-align: left
		& > code
			position: inherit
			z-index: 7

.fade-enter-active, .fade-leave-active
	transition: all .7s

.fade-enter, .fade-leave-to /* .fade-leave-active для <2.1.8 */
	opacity: 0
